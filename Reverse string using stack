#include<iostream>
#include<stack>
#include<bits/stdc++.h>
using namespace std;
void StringReverse(char* c,int n)
{
stack<char> s;
for(int i=0;i<n;i++)
s.push(c[i]);

for(int i=0;i<n;i++)
{
c[i]=s.top();
s.pop();
}
}

int main()
{
char c[15];
cout<<"Enter the String: ";
//cin>>c;             //get word as input
cin.get(c, 15);    //get line as input
StringReverse(c,strlen(c));
cout<<c;
}

/*
Enter the String: Hello world!
!dlrow olleH
*/
